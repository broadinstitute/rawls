<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="dummy" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet logicalFilePath="dummy" author="srubenst" id="create_PPW_STORAGE_TRANSFER_SERVICE_JOB">
        <createTable tableName="PPW_STORAGE_TRANSFER_SERVICE_JOB"
                     remarks="Records the job information for storage transfer service jobs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="JOB_NAME"
                    type="VARCHAR(254)"
                    remarks="Name of the storage transfer service job.">
                <constraints nullable="false"/>
            </column>
            <column name="MIGRATION_ID"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED"
                    type="DATETIME"
                    defaultValueComputed="CURRENT_TIMESTAMP"
                    remarks="When the system created this storage transfer service job.">
                <constraints nullable="false"/>
            </column>
            <column name="DEST_BUCKET"
                    type="VARCHAR(254)"
                    remarks="The bucket that is being transferred to.">
                <constraints nullable="false"/>
            </column>
            <column name="ORIGIN_BUCKET"
                    type="VARCHAR(254)"
                    remarks="The bucket that is being transferred from.">
                <constraints nullable="false"/>
            </column>
            <column name="FINISHED"
                    type="DATETIME"
                    remarks="When the storage transfer job finished.">
                <constraints nullable="true"/>
            </column>
            <column name="OUTCOME"
                    type="VARCHAR(16)"
                    remarks="The state of running the storage transfer job when the system FINISHED.">
                <constraints nullable="true"/>
            </column>
            <column name="MESSAGE"
                    type="TEXT"
                    remarks="Any supplemental message generated by the system, including failure messages.">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="MIGRATION_ID"
                                 baseTableName="PPW_STORAGE_TRANSFER_SERVICE_JOB"
                                 constraintName="FK_V1_WORKSPACE_MIGRATION_STS_JOB"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="CASCADE"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="V1_WORKSPACE_MIGRATION_HISTORY"/>
    </changeSet>
</databaseChangeLog>
